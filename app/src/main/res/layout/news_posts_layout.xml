<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_news_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/default_user" />

    <TextView
        android:id="@+id/user_news_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/user_news_image"
        android:text="Display Name"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/post_news_time"
        android:layout_below="@id/user_news_name"
        android:text=""
        android:textSize="10sp"
        android:textColor="#cfcaca"
        android:layout_alignStart="@id/user_news_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/user_news_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/post_news_time"
        android:layout_marginTop="5dp"
        android:layout_alignStart="@id/user_news_name"
        android:layout_marginBottom="16dp"
        android:text="User default status"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/post_news_image"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:scaleType="fitXY"
        android:layout_below="@id/user_news_status"
        android:layout_alignStart="@id/user_news_image"
        android:layout_marginEnd="24dp"
        app:srcCompat="@drawable/add_100"
        android:visibility="invisible"
        />

</RelativeLayout>